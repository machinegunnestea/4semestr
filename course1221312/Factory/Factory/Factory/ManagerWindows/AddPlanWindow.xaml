<Window x:Class="Factory.ManagerWindows.AddPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factory.ManagerWindows"
        mc:Ignorable="d"
        Title="AddPlanWindow"   MinHeight="220" MinWidth="200" MaxHeight="220" MaxWidth="200">
    <Grid>
        <StackPanel>
            <Label Content="Введите дату (дд.мм.гггг)" FontSize="15"/>
            <TextBox FontSize="15" x:Name="DateTextBox"/>
            <Label Content="Введите количество" FontSize="15"/>
            <TextBox FontSize="15" x:Name="QuantityTextBox"/>

            <Button Margin="100,10,0,0" Content="OK" Background="LightSkyBlue" Click="Button_Click"/>
        </StackPanel>


    </Grid>
</Window>

