<Window x:Class="Factory.ManagerWindows.AddProductMaterialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factory.ManagerWindows"
        mc:Ignorable="d"
        Title="AddProductWindow"  MinHeight="270" MinWidth="200" MaxHeight="270" MaxWidth="200">
    <Grid>
        <StackPanel>
            <Label Content="Введите количество" FontSize="15"/>
            <TextBox FontSize="15" x:Name="QuantityTextBox"/>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Введите материал" FontSize="15"/>
                <Button Content="Выбрать" Background="LightBlue" Margin="0,5"
                        x:Name="SearchMaterialButton"
                        Click="SearchMaterialButton_Click"/>
            </StackPanel>
            <TextBox FontSize="15" x:Name="MaterialTextBox" IsReadOnly="true"/>
            <Button Margin="100,10,0,0" Content="OK" Background="LightSkyBlue" Click="Button_Click"/>
        </StackPanel>

        
    </Grid>
</Window>
