<Window x:Class="Factory.ManagerWindows.SearchItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factory.ManagerWindows"
        mc:Ignorable="d"
        Title="SearchItemWindow" Height="450" Width="800">
    <Grid>
        <DataGrid FontSize="16" IsReadOnly="True" AutoGenerateColumns="False" x:Name="ItemsDataGrid"
                  MouseDoubleClick="ItemsDataGrid_MouseDoubleClick" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Width="*" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
