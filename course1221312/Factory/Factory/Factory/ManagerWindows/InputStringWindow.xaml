<Window x:Class="Factory.ManagerWindows.InputStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factory.ManagerWindows"
        mc:Ignorable="d"
        Title="InputStringWindow" MinHeight="120" MinWidth="200" MaxHeight="120" MaxWidth="200">
    <Grid>
        <StackPanel>
            <Label Content="Введите " FontSize="15" x:Name="NameLabel"/>    
            <TextBox FontSize="15" x:Name="ValueTextBox"/>
            <Button Margin="100,10,0,0" Content="OK" Background="LightSkyBlue" Click="Button_Click"/>
        </StackPanel>
        
        
    </Grid>
</Window>
